apiVersion: machineconfiguration.openshift.io/v1
kind: MachineConfig
metadata:
  labels:
    machineconfiguration.openshift.io/role: "{{ cnf_nodes_role }}"
  name: fec-workaround
spec:
  config:
    ignition:
      version: 3.1.0
  kernelArguments:
    - intel_iommu=on
    - iommu=pt
    - vfio_pci.enable_sriov=1
    - vfio_pci.disable_idle_d3=1
